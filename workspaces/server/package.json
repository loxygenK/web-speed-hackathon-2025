{
  "name": "@wsh-2025/server",
  "private": true,
  "scripts": {
    "database:migrate": "drizzle-kit generate && drizzle-kit push",
    "database:reset": "tsx ./tools/seed.ts",
    "format": "pnpm run format:eslint && pnpm run format:prettier",
    "format:eslint": "eslint --fix .",
    "format:prettier": "prettier --write .",
    "heroku-start": "tsx -r ./loaders/png.cjs ./src/index.ts",
    "start": "PORT=${PORT:-8000} API_BASE_URL=${API_BASE_URL:-http://localhost:8000/api} tsx -r ./loaders/png.cjs ./src/index.ts"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/cors": "10.0.1",
    "@fastify/session": "11.1.0",
    "@fastify/static": "8.0.3",
    "@fastify/swagger": "9.4.0",
    "@fastify/swagger-ui": "5.1.0",
    "@libsql/client": "0.14.0",
    "@wsh-2025/client": "workspace:*",
    "@wsh-2025/schema": "workspace:*",
    "bcrypt": "5.1.1",
    "dedent": "1.5.3",
    "drizzle-orm": "0.38.2",
    "drizzle-seed": "0.1.3",
    "fastify": "5.1.0",
    "fastify-openapi-glue": "4.7.4",
    "fastify-standard-request-reply": "0.1.3",
    "fastify-zod-openapi": "4.0.0",
    "htmlescape": "1.1.1",
    "luxon": "3.5.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router": "7.0.2",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "zod": "3.24.1",
    "zod-openapi": "4.2.0"
