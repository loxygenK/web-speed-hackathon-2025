{
  "name": "@wsh-2025/server",
  "private": true,
  "scripts": {
    "database:migrate": "wireit",
    "database:reset": "wireit",
    "format": "wireit",
    "format:eslint": "wireit",
    "format:prettier": "wireit",
    "heroku-start": "wireit",
    "start": "wireit"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/cors": "10.0.1",
    "@fastify/session": "11.1.0",
    "@fastify/static": "8.0.3",
    "@fastify/swagger": "9.4.0",
    "@fastify/swagger-ui": "5.1.0",
    "@libsql/client": "0.14.0",
    "@wsh-2025/client": "workspace:*",
    "@wsh-2025/schema": "workspace:*",
    "@wsh-2025/server": "workspace:*",
    "bcrypt": "5.1.1",
    "dedent": "1.5.3",
    "drizzle-orm": "0.38.2",
    "drizzle-seed": "0.1.3",
    "fastify": "5.1.0",
    "fastify-openapi-glue": "4.7.4",
    "fastify-standard-request-reply": "0.1.3",
    "fastify-zod-openapi": "4.0.0",
    "htmlescape": "1.1.1",
    "luxon": "3.5.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router": "7.0.2",
    "tsx": "4.19.2",
    "typescript": "5.7.2",
    "wireit": "0.14.9",
    "zod": "3.24.1",
    "zod-openapi": "4.2.0"
  },
  "devDependencies": {
    "@faker-js/faker": "9.2.0",
    "@types/bcrypt": "5.0.2",
    "@types/htmlescape": "1.1.3",
    "@types/jsesc": "3.0.3",
    "@types/luxon": "3.4.2",
    "@types/node": "22.10.0",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "@wsh-2025/configs": "workspace:*",
    "drizzle-kit": "0.30.1",
    "iconv-lite": "0.6.3",
    "jszip": "3.10.1",
    "mikanjs": "1.0.14",
    "type-fest": "4.29.1",
    "webpack-bundle-analyzer": "4.10.2"
  },
  "wireit": {
    "database:migrate": {
      "command": "drizzle-kit generate && drizzle-kit push"
    },
    "database:reset": {
      "command": "tsx ./tools/seed.ts"
    },
    "start": {
      "command": "tsx -r ./loaders/png.cjs ./src/index.ts",
      "service": true,
      "env": {
        "API_BASE_URL": {
          "external": true,
          "default": "http://localhost:8000/api"
        },
        "PORT": {
          "external": true,
          "default": "8000"
        }
      },
      "files": [
        "../../pnpm-lock.yaml",
        "../schema/src/**/*",
        "./src/**/*"
      ],
      "dependencies": [
        "../client:build"
      ]
    },
    "heroku-start": {
      "command": "tsx -r ./loaders/png.cjs ./src/index.ts",
      "service": true,
      "env": {
        "API_BASE_URL": {
          "external": true,
          "default": "http://localhost:8000/api"
        },
        "PORT": {
          "external": true,
          "default": "8000"
        }
      }
    },
    "format": {
      "command": "pnpm run format:eslint && pnpm run format:prettier"
    },
    "format:eslint": {
      "command": "eslint --fix ."
    },
    "format:prettier": {
      "command": "prettier --write ."
    }
  }
}
