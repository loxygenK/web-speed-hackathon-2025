    "@types/jsesc": "3.0.3",
    "@types/luxon": "3.4.2",
    "@types/node": "22.10.0",
    "@types/react": "19.0.1",
    "@types/react-dom": "19.0.2",
    "@wsh-2025/configs": "workspace:*",
    "drizzle-kit": "0.30.1",
    "iconv-lite": "0.6.3",
