{
  "name": "@wsh-2025/test",
  "private": true,
  "scripts": {
    "test": "wireit",
    "test:update": "wireit"
  },
  "devDependencies": {
    "@playwright/test": "1.50.1",
    "@types/node": "22.10.0",
    "@wsh-2025/configs": "workspace:*",
    "mockdate": "3.0.5"
  },
  "wireit": {
    "test": {
      "command": "playwright test",
      "files": [
        "../../pnpm-lock.yaml",
        "../schema/src/**/*",
        "./src/**/*"
      ]
    },
    "test:update": {
      "command": "playwright test --update-snapshots",
      "files": [
        "../../pnpm-lock.yaml",
        "../schema/src/**/*",
        "./src/**/*"
      ]
    }
  }
}
